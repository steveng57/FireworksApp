<Window x:Class="FireworksApp.OverlayToolbarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Focusable="False"
        IsHitTestVisible="True"
        SizeToContent="WidthAndHeight">

    <Border Margin="0"
            Padding="8"
            Background="#AA111111"
            CornerRadius="6">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="StartButton"
                    Content="Start"
                    MinWidth="72"
                    Margin="0,0,8,0" />
            <Button x:Name="StopButton"
                    Content="Stop"
                    MinWidth="72"
                    Margin="0,0,8,0" />
            <Button x:Name="ToggleMotionButton"
                    Content="Toggle Motion"
                    MinWidth="96" />
        </StackPanel>
    </Border>
</Window>
